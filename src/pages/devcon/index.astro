---
import BaseLayout from '../../layouts/BaseLayout.astro';
import '../../styles/global.css';

// Session data
const sessions = [
  {
    id: '1257',
    title: 'AI Pair-Assistant for APS Operators: The End of Scripts?',
    description: 'Explore how Model Context Protocol (MCP) connects AI assistants to live APS APIs. See real demonstrations of conversational APS operations‚Äîno scripting required.',
    speaker: 'Dmytro Yemelianov',
    type: '30-minute deep dive',
    pillars: ['Automate', 'Assist', 'Augment'],
    themes: ['Digital Transformation', 'System Integration'],
    audience: ['Business Decision Makers', 'Developers/Architects'],
    objectives: [
      'Understand how Model Context Protocol (MCP) connects AI assistants to APS APIs',
      'See real demonstrations of AI-assisted APS operations‚Äîno scripting required',
      'Evaluate when AI assistance replaces, augments, or complements traditional automation'
    ],
    apis: ['Authentication API', 'OSS API', 'Model Derivative API', 'Data Management API'],
    color: 'from-purple-500 to-indigo-600',
    icon: 'ü§ñ'
  },
  {
    id: '1258',
    title: 'Zero to Production: Shipping an AI-Ready APS CLI in 30 Min',
    description: 'A speedrun from zero tooling to production-ready APS workflow. Install, configure, and connect to AI assistants‚Äîall live, all real.',
    speaker: 'Dmytro Yemelianov',
    type: '30-minute deep dive',
    pillars: ['Automate', 'Assist'],
    themes: ['Digital Transformation', 'System Integration'],
    audience: ['Developers/Architects'],
    objectives: [
      'Install and configure raps CLI for APS operations in under 5 minutes',
      'Execute common APS workflows (auth, buckets, translations) from the command line',
      'Connect raps CLI to AI assistants via MCP for intelligent automation'
    ],
    apis: ['Authentication API', 'OSS API', 'Model Derivative API', 'Data Management API', 'Webhooks API'],
    color: 'from-blue-500 to-cyan-500',
    icon: 'üöÄ'
  },
  {
    id: '1259',
    title: 'ACC at Enterprise Scale: Automating the Impossible',
    description: 'Break the math that doesn\'t work. Transform hours of manual ACC administration into seconds of scripted operations across 200+ projects.',
    speaker: 'Dmytro Yemelianov',
    type: '30-minute deep dive',
    pillars: ['Automate'],
    themes: ['Digital Transformation', 'System Integration'],
    audience: ['Business Decision Makers', 'Developers/Architects'],
    objectives: [
      'Understand the challenges of managing ACC at enterprise scale (100+ projects, 10,000+ files)',
      'Learn automation patterns for bulk operations: issues, submittals, checklists, and file management',
      'Discover how to integrate ACC workflows with enterprise systems using scriptable CLI tools'
    ],
    apis: ['Data Management API', 'ACC Issues API', 'ACC Submittals API', 'ACC Checklists API', 'ACC RFIs API', 'ACC Assets API'],
    color: 'from-orange-500 to-red-500',
    icon: 'üèóÔ∏è'
  }
];
---

<BaseLayout 
  title="DevCon 2026 Sessions" 
  description="RAPS CLI sessions at Autodesk DevCon 2026. AI-powered APS automation, enterprise ACC workflows, and production-ready CLI tooling."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden hero-pattern">
    <div class="content-container py-16">
      <div class="max-w-4xl mx-auto text-center fade-in">
        <div class="inline-flex items-center gap-2 bg-gradient-to-r from-raps-blue/10 to-raps-purple/10 rounded-full px-4 py-2 mb-6">
          <span class="text-2xl">üé§</span>
          <span class="text-sm font-medium text-gray-700">Autodesk University / DevCon 2026</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text">RAPS CLI Sessions</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Three deep-dive sessions on AI-powered APS automation, 
          enterprise-scale ACC workflows, and production-ready CLI tooling.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <span class="w-3 h-3 bg-green-500 rounded-full"></span>
            All sessions confirmed
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <span>üìç</span>
            Speaker: Dmytro Yemelianov
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sessions Grid -->
  <section class="py-16 bg-gray-50">
    <div class="content-container">
      <div class="space-y-8">
        {sessions.map((session, index) => (
          <a href={`/devcon/${session.id}`} class="block group">
            <div class="card p-0 overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
              <div class={`h-2 bg-gradient-to-r ${session.color}`}></div>
              <div class="p-8">
                <div class="flex flex-col lg:flex-row gap-8">
                  <!-- Left: Main Info -->
                  <div class="flex-1">
                    <div class="flex items-start gap-4 mb-4">
                      <span class="text-4xl group-hover:scale-110 transition-transform duration-300">{session.icon}</span>
                      <div>
                        <div class="flex items-center gap-2 mb-2">
                          <span class="text-xs font-mono bg-gray-100 px-2 py-1 rounded">
                            Session {session.id}
                          </span>
                          <span class="text-xs bg-green-100 text-green-700 px-2 py-1 rounded">
                            {session.type}
                          </span>
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                          {session.title}
                        </h2>
                        <p class="text-gray-600">{session.description}</p>
                      </div>
                    </div>
                    
                    <!-- Learning Objectives -->
                    <div class="mt-6">
                      <h3 class="text-sm font-semibold text-gray-700 mb-3">Learning Objectives</h3>
                      <ul class="space-y-2">
                        {session.objectives.map((obj) => (
                          <li class="flex items-start gap-2 text-sm text-gray-600">
                            <span class="text-green-500 mt-0.5 flex-shrink-0">‚úì</span>
                            <span>{obj}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                  
                  <!-- Right: Metadata -->
                  <div class="lg:w-72 space-y-4">
                    <!-- AI Pillars -->
                    <div>
                      <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">AI Pillars</h4>
                      <div class="flex flex-wrap gap-2">
                        {session.pillars.map((pillar) => (
                          <span class={`text-xs px-2 py-1 rounded-full font-medium ${
                            pillar === 'Automate' ? 'bg-blue-100 text-blue-700' :
                            pillar === 'Assist' ? 'bg-purple-100 text-purple-700' :
                            'bg-pink-100 text-pink-700'
                          }`}>
                            {pillar}
                          </span>
                        ))}
                      </div>
                    </div>
                    
                    <!-- Target Audience -->
                    <div>
                      <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Audience</h4>
                      <div class="flex flex-wrap gap-2">
                        {session.audience.map((aud) => (
                          <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">
                            {aud}
                          </span>
                        ))}
                      </div>
                    </div>
                    
                    <!-- APIs Covered -->
                    <div>
                      <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">APS Components</h4>
                      <div class="flex flex-wrap gap-1">
                        {session.apis.slice(0, 4).map((api) => (
                          <span class="text-xs bg-orange-50 text-orange-700 px-2 py-1 rounded">
                            {api.replace(' API', '')}
                          </span>
                        ))}
                        {session.apis.length > 4 && (
                          <span class="text-xs bg-gray-50 text-gray-500 px-2 py-1 rounded">
                            +{session.apis.length - 4} more
                          </span>
                        )}
                      </div>
                    </div>
                    
                    <!-- View Full Session Indicator -->
                    <div class="pt-4 flex items-center justify-end text-blue-600 font-medium text-sm group-hover:translate-x-1 transition-transform">
                      View Full Session ‚Üí
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Speaker Section -->
  <section class="py-16">
    <div class="content-container">
      <div class="max-w-3xl mx-auto">
        <div class="card p-8">
          <div class="flex flex-col md:flex-row gap-6 items-center">
            <div class="w-24 h-24 bg-gradient-to-br from-raps-blue to-raps-purple rounded-full flex items-center justify-center text-white text-3xl font-bold">
              DY
            </div>
            <div class="flex-1 text-center md:text-left">
              <h3 class="text-2xl font-bold mb-2">Dmytro Yemelianov</h3>
              <p class="text-gray-600 mb-4">
                Creator of RAPS CLI. A decade of experience building Autodesk integrations 
                across Vault, Inventor, AutoCAD, and the entire APS ecosystem.
              </p>
              <div class="flex flex-wrap gap-3 justify-center md:justify-start">
                <a href="https://github.com/dmytro-yemelianov" class="text-sm text-gray-500 hover:text-raps-blue">
                  GitHub ‚Üí
                </a>
                <a href="https://rapscli.xyz" class="text-sm text-gray-500 hover:text-raps-blue">
                  Website ‚Üí
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-16 bg-gray-50">
    <div class="content-container">
      <h2 class="text-2xl font-bold text-center mb-8">Prepare for the Sessions</h2>
      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href="https://github.com/dmytro-yemelianov/raps" class="card p-6 text-center hover:border-raps-blue transition">
          <span class="text-3xl mb-3 block">üì¶</span>
          <h3 class="font-semibold mb-2">Install RAPS CLI</h3>
          <p class="text-sm text-gray-600">Get the CLI installed before the session for hands-on learning</p>
        </a>
        <a href="/guides" class="card p-6 text-center hover:border-raps-blue transition">
          <span class="text-3xl mb-3 block">üìö</span>
          <h3 class="font-semibold mb-2">Read the Docs</h3>
          <p class="text-sm text-gray-600">Familiarize yourself with RAPS commands and concepts</p>
        </a>
        <a href="/resources/aps-cheatsheet" class="card p-6 text-center hover:border-raps-blue transition">
          <span class="text-3xl mb-3 block">üìã</span>
          <h3 class="font-semibold mb-2">APS Cheat Sheet</h3>
          <p class="text-sm text-gray-600">Quick reference for APS concepts covered in sessions</p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gradient-to-r from-raps-blue to-raps-purple text-white">
    <div class="content-container text-center">
      <h2 class="text-3xl font-bold mb-4">See You at DevCon 2026!</h2>
      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        Can't make it in person? Star the repo to stay updated on session recordings and materials.
      </p>
      <a 
        href="https://github.com/dmytro-yemelianov/raps" 
        class="btn bg-white text-raps-blue hover:bg-gray-100 text-lg px-8 py-3"
      >
        ‚≠ê Star on GitHub
      </a>
    </div>
  </section>
</BaseLayout>
