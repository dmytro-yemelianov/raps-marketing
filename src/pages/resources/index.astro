      <!-- Quick References -->
      <section>
        <h2 class="text-2xl font-bold text-gray-900 mb-6 border-b pb-2">üìö Quick References</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <a href="/resources/aps-cheatsheet" class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
            <div>
              <h3 class="font-medium text-gray-900">APS Cheat Sheet</h3>
