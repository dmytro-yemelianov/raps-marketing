---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import '../../styles/global.css';

const articles = await getCollection('articles', ({ data }) => {
  return !data.draft;
});

const sortedArticles = articles.sort((a, b) => 
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

const featuredArticles = sortedArticles.filter(article => article.data.featured);
const regularArticles = sortedArticles.filter(article => !article.data.featured);
---

<BaseLayout 
  title="Articles - Industry Insights and Technical Deep Dives"
  description="Expert analysis on CAD/PLM development challenges, cross-platform pain points, and solutions."
>
  <div class="hero-pattern py-12">
    <div class="content-container">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-4">
        <span class="gradient-text">Industry Insights</span>
      </h1>
      <p class="text-xl text-gray-600 text-center max-w-3xl mx-auto">
        Deep dives into the universal pain points plaguing CAD/PLM developers 
        and how modern tooling can solve them.
      </p>
    </div>
  </div>

  <div class="content-container py-12">
    {featuredArticles.length > 0 && (
      <section class="mb-16">
        <h2 class="text-2xl font-bold mb-8 flex items-center">
          <span class="text-2xl mr-2">⭐</span>
          Featured Articles
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          {featuredArticles.map((article) => (
            <article class="card p-6 hover:shadow-xl transition-shadow">
              <div class="flex items-start justify-between mb-4">
                <span class="text-sm text-gray-500">
                  {article.data.publishDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </span>
                <span class="px-2 py-1 bg-gradient-to-r from-raps-blue to-raps-purple text-white text-xs rounded-full">
                  Featured
                </span>
              </div>
              <h3 class="text-xl font-semibold mb-3 hover:text-raps-blue transition">
                <a href={`/articles/${article.slug}`}>
                  {article.data.title}
                </a>
              </h3>
              <p class="text-gray-600 mb-4">
                {article.data.description}
              </p>
              <div class="flex items-center justify-between">
                <div class="flex flex-wrap gap-2">
                  {article.data.tags.slice(0, 3).map((tag) => (
                    <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
                <a 
                  href={`/articles/${article.slug}`}
                  class="text-raps-blue font-semibold hover:underline"
                >
                  Read more →
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    <section>
      <h2 class="text-2xl font-bold mb-8">All Articles</h2>
      <div class="space-y-6">
        {regularArticles.map((article) => (
          <article class="card p-6 hover:shadow-lg transition-shadow">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
              <h3 class="text-xl font-semibold mb-2 md:mb-0 hover:text-raps-blue transition">
                <a href={`/articles/${article.slug}`}>
                  {article.data.title}
                </a>
              </h3>
              <span class="text-sm text-gray-500">
                {article.data.publishDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </span>
            </div>
            <p class="text-gray-600 mb-4">
              {article.data.description}
            </p>
            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-2">
                {article.data.tags.map((tag) => (
                  <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>
              <a 
                href={`/articles/${article.slug}`}
                class="text-raps-blue font-semibold hover:underline"
              >
                Read more →
              </a>
            </div>
          </article>
        ))}
      </div>
    </section>

    {articles.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No articles published yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>